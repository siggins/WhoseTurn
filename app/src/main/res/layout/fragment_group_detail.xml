<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/group_detail"
    style="?android:attr/textAppearanceLarge" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupDetailFragment" android:orientation="vertical" >
    <Button
        android:layout_width="fill_parent"
        android:id="@+id/btnAdd"
        android:layout_height="80dp"
        android:text="+"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/btnAdd">
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>

</RelativeLayout>
